---
layout: base.njk
title: "Blog"
---

<section id="blog">
  <div class="container">
    <!-- Blog Header -->
    <div class="blog-header">
      <h2>Our Blog</h2>
      <p>Insights and Advice on Web Development, Design, and More</p>
    </div>

    <!-- Blog Grid -->
    <div class="blog-grid">
      {% for post in collections.blog | reverse %}
        <article class="blog-card">
          {% if post.data.image %}
            <img src="{{ post.data.image }}" alt="{{ post.data.title }}">
          {% endif %}

          <div class="card-content">
            {% if post.data.category %}
              <div class="category">{{ post.data.category }}</div>
            {% endif %}

            <h3>
              <a href="{{ post.url }}">{{ post.data.title }}</a>
            </h3>

            {% if post.data.description %}
              <p>{{ post.data.description }}</p>
            {% else %}
              <p>{{ post.templateContent | striptags | truncate(150, true, "â€¦") }}</p>
            {% endif %}

            <div class="date">{{ post.date | readableDate }}</div>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>
</section>

